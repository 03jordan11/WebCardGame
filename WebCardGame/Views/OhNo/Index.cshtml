	/* DISABLE ALL CLICKS */
	function disableAll() {
		$("#pCard1").off('click');
		$("#pCard2").off('click');
		$("#pCard3").off('click');
		$("#pCard4").off('click');
	}

	/* ENABLE ALL CLICKS */
	function enableAll() {
		// player clicks enabled if there is no winner
