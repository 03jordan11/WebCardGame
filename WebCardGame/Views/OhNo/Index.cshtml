	/* DEAL STARTING CARD ONTO TABLE */
	function dealStart() {
		startCard = deck.pop();
		while (startCard.value == -10 || startCard.value == -1 || startCard.value == 0) {
			temp = deck.pop();
			deck.push(startCard);
			startCard = temp;
